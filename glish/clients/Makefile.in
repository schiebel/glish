	$(CPLUS) $(INCLUDE) $(CXXFLAGS) -c $(SRC)/shell_client.cc 

shell_client: shell_client.o $(GLISH_LIBS)
	$(CPLUS) $(INCLUDE) $(CXXFLAGS) -o shell_client shell_client.o $(LIBS)

